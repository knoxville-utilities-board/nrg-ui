{{page-title "Scaffold"}}

<div class="row g-0">
  <div class="col px-md-0 py-3">
    <div class="container mx-auto">
      {{#let (get-code-snippet "scaffold-component.hbs") as |snippet|}}
        <CodeBlock
          class="border rounded simple p-3"
          @lang={{snippet.language}}
          @code={{snippet.source}}
        />
      {{/let}}
    </div>
  </div>
</div>