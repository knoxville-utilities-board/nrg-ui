{
  "private": true,
  "repository": "",
  "license": "MIT",
  "author": "",
  "scripts": {
    "build": "pnpm --filter @nrg-ui/ember build",
    "lint": "pnpm --filter '*' lint",
    "lint:fix": "pnpm --filter '*' lint:fix",
    "format": "pnpm --filter '*' format",
    "prepare": "pnpm build",
    "start": "concurrently 'pnpm:start:*' --restart-after 5000 --prefix-colors cyan,white,yellow",
    "start:addon": "pnpm --filter @nrg-ui/ember start --no-watch.clearScreen",
    "start:test-app": "pnpm --filter ember-test-app start",
    "start:design-system": "pnpm --filter @nrg-ui/css start",
    "test": "pnpm --filter '*' test",
    "test:ember": "pnpm --filter '*' test:ember"
  },
  "devDependencies": {
    "@glint/core": "^1.2.1",
    "concurrently": "^8.2.0",
    "prettier": "^3.0.3",
    "prettier-plugin-ember-template-tag": "^1.1.0"
  },
  "pnpm": {
    "overrides": {
      "@types/eslint": "^7.0.0"
    }
  }
}
