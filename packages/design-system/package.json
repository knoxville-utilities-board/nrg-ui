{
  "name": "@nrg-ui/css",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:icons": "mkdir -p dist/assets/icons && cp -r node_modules/bootstrap-icons/font/fonts node_modules/bootstrap-icons/font/bootstrap-icons.css dist/assets/icons",
    "build:sass": "sass --load-path node_modules src:dist",
    "start": "concurrently pnpm:build:icons pnpm:*:sass",
    "build": "concurrently 'pnpm:build:*' --prefix-colors cyan,magenta,yellow",
    "format": "prettier --write .",
    "sasstest": "sass --help",
    "watch:sass": "sass --load-path node_modules --watch src:dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "bootstrap": "5.3.3",
    "bootstrap-icons": "^1.11.3",
    "concurrently": "^8.2.2",
    "sass": "^1.54.8"
  },
  "dependencies": {
    "prettier": "^3.3.2"
  }
}
