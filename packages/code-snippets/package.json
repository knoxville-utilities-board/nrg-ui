{
  "name": "@nrg-ui/code-snippets",
  "version": "0.4.0",
  "description": "Extract code snippets from your source files for runtime rendering in Vite-powered apps.",
  "keywords": [
    "vite",
    "vite-plugin",
    "code",
    "snippets",
    "virtual-module",
    "hot-reload"
  ],
  "repository": {
    "directory": "packages/code-snippets",
    "type": "git",
    "url": "https://github.com/knoxville-utilities-board/nrg-ui.git"
  },
  "license": "MIT",
  "author": {
    "name": "Knoxville Utilities Board",
    "url": "https://www.kub.org"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./dist/*.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "coverage": "vitest --coverage",
    "format": "prettier . --write --cache",
    "lint": "concurrently 'pnpm:lint:*(!fix)' --names 'lint:' --prefix-colors=auto",
    "lint:fix": "concurrently \"pnpm:lint:*:fix\" --names \"fix:\" --prefix-colors=auto && pnpm format",
    "lint:format": "prettier . --cache --check",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "prepare": "pnpm build",
    "test": "vitest"
  },
  "peerDependencies": {
    "@rollup/pluginutils": "^5.3.0",
    "vite": ">=6.0.0"
  },
  "devDependencies": {
    "@nrg-ui/standards": "workspace:^",
    "@rollup/pluginutils": "^5.3.0",
    "@types/node": "^22.19.7",
    "@types/picomatch": "^4.0.2",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-plugin-decorator-position": "^6.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.2",
    "tinyglobby": "^0.2.15",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
