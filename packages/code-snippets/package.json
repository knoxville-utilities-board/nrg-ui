{
  "name": "@nrg-ui/code-snippets",
  "version": "0.1.2",
  "description": "Extract code snippets from your source files for runtime rendering in Vite-powered apps.",
  "keywords": [
    "vite",
    "vite-plugin",
    "code",
    "snippets",
    "virtual-module",
    "hot-reload"
  ],
  "repository": {
    "directory": "packages/code-snippets",
    "type": "git",
    "url": "https://github.com/knoxville-utilities-board/nrg-ui.git"
  },
  "license": "MIT",
  "author": {
    "name": "Knoxville Utilities Board",
    "url": "https://www.kub.org"
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "coverage": "vitest --coverage",
    "format": "prettier . --write --cache",
    "lint": "concurrently 'pnpm:lint:*(!fix)' --names 'lint:' --prefixColors auto",
    "lint:fix": "concurrently \"pnpm:lint:*:fix\" --names \"fix:\" --prefixColors auto && pnpm format",
    "lint:format": "prettier . --cache --check",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "prepare": "pnpm build",
    "test": "vitest"
  },
  "peerDependencies": {
    "@rollup/pluginutils": "^5.3.0",
    "vite": ">=6.0.0"
  },
  "devDependencies": {
    "@nrg-ui/standards": "workspace:*",
    "@rollup/pluginutils": "^5.3.0",
    "@types/picomatch": "^4.0.2",
    "@types/node": "^22.18.6",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.36.0",
    "eslint-plugin-decorator-position": "^6.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "tinyglobby": "^0.2.15",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.6",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
