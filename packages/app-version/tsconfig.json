{
  "include": ["src/**/*", "types"],
  "exclude": ["src/**/*.test.ts"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "lib": ["ES2020"],

    "noEmit": false,
    "emitDeclarationOnly": false,
    "noEmitOnError": false,
    "declaration": true,
    "declarationDir": "./declarations",

    "rootDir": "./src",
    "outDir": "./dist",
    "allowJs": true,
    "allowImportingTsExtensions": false,
    "strict": true
  }
}
