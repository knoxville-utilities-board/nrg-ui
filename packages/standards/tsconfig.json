{
  "include": ["src/**/*", "types"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2020"],

    "noEmit": false,
    "emitDeclarationOnly": false,
    "noEmitOnError": false,

    "declaration": true,
    "declarationDir": "declarations",

    "rootDir": "./src",
    "outDir": "./dist",
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "allowImportingTsExtensions": false,
    "strict": true
  }
}
