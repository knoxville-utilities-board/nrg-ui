{
  "name": "@nrg-ui/standards",
  "version": "0.5.0",
  "description": "Composable standards for NRG UI packages",
  "keywords": [
    "eslint",
    "eslintconfig",
    "config",
    "javascript",
    "styleguide"
  ],
  "repository": {
    "directory": "packages/standards",
    "type": "git",
    "url": "https://github.com/knoxville-utilities-board/nrg-ui.git"
  },
  "license": "MIT",
  "author": {
    "name": "Knoxville Utilities Board",
    "url": "https://www.kub.org"
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "main": "./dist/index.js",
  "bin": {
    "nrg-standards": "./bin/nrg-standards"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "lint": "concurrently 'pnpm:lint:*(!fix)' --names 'lint:'",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "prepare": "pnpm build",
    "test": "echo 'The @nrg-ui/standards package does not have tests'"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "execa": "^9.5.3",
    "find-up": "^7.0.0",
    "semver": "^7.7.2",
    "yargs": "^18.0.0"
  },
  "optionalDependencies": {
    "eslint-plugin-decorator-position": "^6.0.0",
    "eslint-plugin-ember": "^12.5.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.21.0",
    "eslint-plugin-qunit": "8.2.2",
    "typescript-eslint": "^8.36.0"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.16.2",
    "@types/semver": "^7.7.0",
    "@types/yargs": "^17.0.33",
    "eslint": "^9.30.1",
    "eslint-plugin-decorator-position": "^6.0.0",
    "eslint-plugin-import": "^2.32.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0"
  },
  "engines": {
    "node": "^20.19.0"
  }
}
