<main data-theme="marketing" class="h-full d-flex bg-primary-subtle">
  <div class="container p-3">
    <Mktg::DualPromo
      @subject="Fiber Add-ons"
      @headerText="Add TV and Phone Packages"
      @callout="Make the most of your KUB Fiber plan by adding our TV and phone services."
      @leftProductTitle="KUB TV Packages"
      @rightProductTitle="KUB Phone Packages"
    >
      <:left-img>
        <img
          src="https://place-hold.it/100x100"
          alt="Placeholder"
          class="w-100 h-25 rounded"
        />
