{{page-title "@nrg-ui/ember"}}

<div data-theme="marketing" id="application" class="d-flex flex-column">
  <Mktg::Header class={{if (eq this.currentRoute "shopping.fiber-selected") "bg-success"}}>
    <:brand>
      <img src="https://imageplaceholder.net/50" alt="Icon" />
    </:brand>
    <:title>
      {{#if this.title}}
        <p class="m-0">{{this.title}}</p>
      {{/if}}
    </:title>
    <:nav>
      {{#unless (eq this.currentRoute "shopping.fiber")}}
        <Button class="btn-outline-light me-1">Prev</Button>
      {{/unless}}
      <Button
        class="btn-outline-light me-1"
        @disabled={{this.nextNavDisabled}}
      >Next</Button>
    </:nav>
    <:options>
      {{#if this.options}}
        {{#each this.options as |option|}}
          <div class="d-flex flex-row flex-wrap justify-content-center">
            <p class="my-0 me-2 fw-bold">{{option.label}}</p>
            <LinkTo
              @route={{option.link.route}}
              class="link-light me-2"
            >{{option.link.text}}</LinkTo>
          </div>
        {{/each}}
      {{/if}}
    </:options>
  </Mktg::Header>

  <main class="d-flex">
    {{outlet}}
  </main>

  <Footer>
    <:right>
      <div class="d-flex flex-row flex-wrap">
        <LinkTo @route="index" class="me-2 p-0">Privacy</LinkTo>
        <LinkTo @route="index" class="m-0 p-0">Terms</LinkTo>
      </div>
    </:right>
  </Footer>
</div>