{{page-title "Shopping"}}
<div class="m-0 row flex-fill">
  <Mktg::WorkflowTray id="scroll-vertical" class="py-0">
    <div class="d-none d-md-flex mx-2 fs-2">
      <h2>Select Your Services</h2>
    </div>
    <div>
      <LinkTo
        class="link-underline link-underline-opacity-0"
        @route="shopping.fiber"
      >
        <Mktg::ServicePricing
          @label={{this.fiberLabel}}
          @package={{this.fiberPackage}}
          @description={{this.fiberDescription}}
          @icon="bi-wifi"
          @selected={{this.fiberSelected}}
          @active={{if (eq this.activeTab "fiber") true false}}
          as |Addon|
        >
          <LinkTo class="z-1" @route="shopping.fiber-addons">View Addons</LinkTo>
          {{#if this.addonSelected}}
            <Addon
              @label="Smart Gig"
              @price={{if this.showBusinessProducts "$25/mo" "$15/mo"}}
            />
          {{/if}}
        </Mktg::ServicePricing>
      </LinkTo>
      {{#unless this.showBusinessProducts}}
        <LinkTo
          class="link-underline link-underline-opacity-0"
          @route="shopping.tv"
        >
          <Mktg::ServicePricing
            @label="TV"
            @package={{this.tvPackage}}
            @description={{this.tvDescription}}
            @icon="bi-tv"
            @selected={{this.tvSelected}}
            @active={{if (eq this.activeTab "tv") true false}}
            as |Addon|
          >
            <LinkTo class="z-1" @route="shopping.tv-addons">View Addons</LinkTo>
            {{#if this.tvAddons.length}}
              {{#each this.tvAddons as |addon|}}
                <Addon @label={{addon.label}} @price={{addon.price}} />
              {{/each}}
            {{/if}}
          </Mktg::ServicePricing>
        </LinkTo>
      {{/unless}}
      <LinkTo
        class="link-underline link-underline-opacity-0"
        @route="shopping.phone"
      >
        <Mktg::ServicePricing
          @label="Phone"
          @package={{this.phonePackage}}
          @description={{this.phoneDescription}}
          @icon="bi-telephone"
          @selected={{this.phoneSelected}}
          @active={{if (eq this.activeTab "phone") true false}}
          as |Addon|
        >
          <LinkTo class="z-1" @route="shopping.phone-addons">View Addons</LinkTo>
          {{#if this.phoneAddons.length}}
            {{#each this.phoneAddons as |addon|}}
              <Addon @label={{addon.label}} @price={{addon.price}} />
            {{/each}}
          {{/if}}
        </Mktg::ServicePricing>
      </LinkTo>
    </div>
    <hr class="my-0" />
    <div class="my-3">
      <div class="row justify-content-between my-2" ...attributes>
        <div class="col-auto">First Bill Including Fees</div>
        <div class="col-auto">{{this.total}}</div>
      </div>
      <div class="row justify-content-between my-2" ...attributes>
        <div class="col-auto">Monthly Total</div>
        <div class="col-auto">{{this.total}}</div>
      </div>
    </div>
    <div class="d-flex">
      <Button
        class="btn-primary py-3 flex-fill"
        @disabled={{unless (eq this.currentRoute "shopping.fiber") false true}}
        @onClick={{this.changeRoute}}
      >Next</Button>
    </div>
  </Mktg::WorkflowTray>
  <div
    class="scrollable-md bg-primary-subtle col-12 col-md-7 col-lg-8 order-1 order-md-2 d-flex flex-column align-items-center"
  >
    <div class="d-flex d-md-none mt-3 justify-self-center mx-2 fs-2">
      <h2 class="m-0">Select Your Services</h2>
    </div>
    {{outlet}}
  </div>
</div>