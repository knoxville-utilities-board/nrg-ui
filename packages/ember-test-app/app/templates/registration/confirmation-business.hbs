<Mktg::CardContainer class="my-3 col-12 col-lg-9" as |Container|>
  <Container.Card
    class="g-col-12 d-flex justify-content-start"
    @hasBorder={{false}}
    @hasHorizontalDivider={{false}}
  >
    <:body>
      <div>
        <Mktg::ServicePricing
          @label="Fiber"
          @package="The Gig At Work"
          @description="$150/mo"
          @icon="bi-wifi"
          @selected={{true}}
          @active={{false}}
          as |Addon|
        >
          <Addon @label="Smart Gig" @price="$25/mo" />
        </Mktg::ServicePricing>
        <Mktg::ServicePricing
          @label="Phone"
          @package="KUB"
          @description="$129/mo"
          @icon="bi-telephone"
          @selected={{true}}
          @active={{false}}
          as |Addon|
        >
          <Addon @label="Battery Backup" @price="$205" />
        </Mktg::ServicePricing>
      </div>
      <div class="m-3">
        <div class="row justify-content-between my-2">
          <div class="col-auto">First Bill Including Fees</div>
          <div class="col-auto">$509</div>
        </div>
        <div class="row justify-content-between my-2">
          <div class="col-auto">Monthly Total</div>
          <div class="col-auto">$304/mo</div>
        </div>
      </div>
    </:body>
  </Container.Card>
