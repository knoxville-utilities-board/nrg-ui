<Mktg::CardContainer class="my-3 col-12 col-md-8" as |Container|>
  <Container.MktgCard
    class="g-col-12"
    @hasBorder={{false}}
    @title="KUB Phone Service"
    @subtitle="Description of phone goes here"
  >
    <:callout>
      <p class="fw-bold fs-1 m-0 p-0">$129<span class="fs-5 mb-2">/mo</span></p>
    </:callout>
    <:end>
      <Mktg::FeatureList class="mb-2 mb-md-4" @columns={{2}}>
        <:label>
          <p>Includes:</p>
        </:label>
        <:features as |Feature|>
          <Feature
            class="mx-md-4 my-0 d-flex align-items-center"
            @icon="bi-check-lg"
            @text="Unlimited Long-distance"
          />
          <Feature
            class="mx-md-4 my-0 d-flex align-items-center"
            @icon="bi-check-lg"
            @text="Caller ID"
          />
          <Feature
            class="mx-md-4 my-0 d-flex align-items-center"
            @icon="bi-check-lg"
            @text="Speed Dial"
          />
          <Feature
            class="mx-md-4 my-0 d-flex align-items-center"
            @icon="bi-check-lg"
            @text="Reliable Connection"
          />
          <Feature
            class="mx-md-4 my-0 d-flex align-items-center"
            @icon="bi-check-lg"
            @text="Primary Residential Phone Number"
          />
        </:features>
      </Mktg::FeatureList>
      <Button
        class="bg-primary w-100 text-white mt-4"
        @text="Add to Bundle"
        @type="button"
      />
    </:end>
  </Container.MktgCard>
</Mktg::CardContainer>