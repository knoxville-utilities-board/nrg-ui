<Mktg::CardContainer class="my-3 col-12 col-lg-9" as |Container|>
  <Container.MktgCard
    class="g-col-12"
    @hasBorder={{false}}
    @title="Battery Backup"
    @subtitle="Add a one-time cost battery backup to your bundle."
  >
    <:callout>
      <p class="fw-bold fs-1 m-0 p-0">$80</p>
    </:callout>
    <:end>
      <p class="m-0 p-0">
        Safety and security; supplies back-up power to your home phone service
        in the event of an outage.
      </p>
      <Button
        class="add-option bg-primary w-100 text-white mt-4"
        @text="Add to Bundle"
        @type="button"
        @onClick={{this.clickHandler}}
      />
    </:end>
  </Container.MktgCard>
</Mktg::CardContainer>