<Mktg::CardContainer class="my-3 col-12 col-lg-9" as |Container|>
  <Container.MktgCard
    class="g-col-12"
    @hasBorder={{false}}
    @title="Phone Number"
    @subtitle="Do you have an existing phone number you'd like to transfer or would you like a new phone number?"
  >
    <:start>
      <div
        class="w-100 my-4 row d-flex justify-self-center justify-content-center align-items-center"
      >
        <div class="col-6 d-flex">
          <Button
            class="w-100 {{this.newBtnClass}}"
            @icon={{if (eq this.phoneNumberOption "new") "bi-check-lg"}}
            @iconPosition="right"
            @iconLabel="selected"
            @text="New Phone Number"
            @type="button"
            @onClick={{fn this.setPhoneNumberOption "new"}}
          />
        </div>
        <div class="col-6 d-flex">
          <Button
            class="w-100 {{this.existingBtnClass}} "
            @icon={{if (eq this.phoneNumberOption "existing") "bi-check-lg"}}
            @iconPosition="right"
            @iconLabel="selected"
            @text="Existing Phone Number"
            @type="button"
            @onClick={{fn this.setPhoneNumberOption "existing"}}
          />
        </div>
      </div>
    </:start>
    <:end>
      {{#if (eq this.phoneNumberOption "new")}}
        <form id="new">
          <div class="dropdown mt-3">
            <button
              class="btn border dropdown-toggle d-flex justify-content-between align-items-center w-100"
              type="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              (555)555-5555
            </button>
          </div>
          <div class="dropdown mt-3">
            <button
              class="btn border dropdown-toggle d-flex justify-content-between align-items-center w-100"
              type="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              (555)555-5555
            </button>
          </div>
          <div class="dropdown mt-3">
            <button
              class="btn border dropdown-toggle d-flex justify-content-between align-items-center w-100"
              type="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              Add a Third Number? (optional)
            </button>
          </div>
          <div class="d-flex w-100 justify-content-between mt-3">
            <p class="m-0 p-0 fw-semibold">Do you want to be included in the
              White Pages?*</p>
            <div class="d-flex">
              <div class="form-check me-4">
                <input
                  id="yes-white-pages"
                  class="form-check-input"
                  type="radio"
                  name="flexRadioDefault"
                />
                <label class="form-check-label" for="flexRadioDefault2">
                  Yes
                </label>
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="radio"
                  name="flexRadioDefault"
                  id="no-white-pages"
                  checked
                />
                <label class="form-check-label" for="flexRadioDefault2">
                  No
                </label>
              </div>
            </div>
          </div>
        </form>
      {{/if}}
      {{#if (eq this.phoneNumberOption "existing")}}
        <form id="existing" class="mt-3">
          <div class="row d-flex justify-content-center align-items-center">
            <div class="col-6">
              <Nrg::TextField placeholder="(555)555-5555" />
            </div>
            <div class="dropdown col-6">
              <button
                class="btn border dropdown-toggle d-flex justify-content-between align-items-center w-100"
                type="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                (555)555-5555
              </button>
            </div>
          </div>
          <div class="dropdown mt-3">
            <button
              class="btn border dropdown-toggle d-flex justify-content-between align-items-center w-100"
              type="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              AT&amp;T
            </button>
          </div>
          <div class="dropdown mt-3">
            <button
              class="btn border dropdown-toggle d-flex justify-content-between align-items-center w-100"
              type="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              Add a Third Number? (optional)
            </button>
          </div>
          <div class="d-flex w-100 justify-content-between mt-3">
            <p class="m-0 p-0 fw-semibold">Do you want to be included in the
              White Pages?*</p>
            <div class="d-flex">
              <div class="form-check me-4">
                <input
                  class="form-check-input"
                  type="radio"
                  name="flexRadioDefault"
                  id="existing-yes-white-pages"
                />
                <label class="form-check-label" for="flexRadioDefault2">
                  Yes
                </label>
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="radio"
                  name="flexRadioDefault"
                  id="existing-no-white-pages"
                  checked
                />
                <label class="form-check-label" for="flexRadioDefault2">
                  No
                </label>
              </div>
            </div>
          </div>
        </form>
      {{/if}}
    </:end>
  </Container.MktgCard>
</Mktg::CardContainer>