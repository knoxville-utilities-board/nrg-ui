<div class="container-fluid">
  <div
    class="row row-cols-12 bg-primary text-light p-1 align-items-center justify-content-evenly"
    ...attributes
  >
    <div class="{{this.brandClassList}}">
      {{yield to="brand"}}
    </div>
    <div class="{{this.titleClassList}}">
      <div class="justify-content-center text-center">
        {{yield to="title"}}
      </div>
      <div class="mt-2 mx-2 d-none d-md-flex">
        {{yield to="dropSection"}}
      </div>
    </div>
    <div class="{{this.navClassList}}">
      {{yield to="nav"}}
    </div>
    <div class="col-12 d-flex d-md-none order-last justify-content-center">
      {{yield to="dropSection"}}
    </div>
  </div>
</div>