{{#if (has-block)}}
  {{yield
    (hash
      input=(component
        "nrg/internal/base-input-field"
        focusId=@focusId
        type=this.type
        min=@min
        max=@max
        step=this.step
        value=this.value
        name=@name
        placeholder=@placeholder
        autocomplete=@autocomplete
        autocapitalize=@autocapitalize
        disabled=@disabled
        maxLength=@maxLength
        readonly=@readonly
        onFocus=@onFocus
        onBlur=@onBlur
        onChange=this.onChange
      )
    )
  }}
{{else}}
  <Nrg::Internal::BaseInputField
    @focusId={{@focusId}}
    @type={{this.type}}
    @min={{@min}}
    @max={{@max}}
    @step={{this.step}}
    @value={{this.value}}
    @name={{@name}}
    @placeholder={{@placeholder}}
    @autocomplete={{@autocomplete}}
    @autocapitalize={{@autocapitalize}}
    @disabled={{@disabled}}
    @maxLength={{@maxLength}}
    @readonly={{@readonly}}
    @onFocus={{@onFocus}}
    @onBlur={{@onBlur}}
    @onChange={{this.onChange}}
  />
{{/if}}